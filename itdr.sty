\RequirePackage[toc]{multitoc}
\newcommand{\toc}[1][1]{%
	\fancyhead[LE,RO]{}
	\begingroup
	\let\cleardoublepage\relax
	\let\clearpage\relax
	\hyphenchar\font=-1% disable hyphenation
	\setcounter{tocdepth}{#1}\tableofcontents
	\hyphenchar\font=`\-% enable hyphenation
	\endgroup
	\clearpage
}

